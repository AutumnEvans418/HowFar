<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HowFarApp.Views.NewObjectPage"
             Title="New Object"
             BackgroundColor="Black">
    <ContentPage.Content>
        <StackLayout Padding="45"
                     Spacing="10"
                     BackgroundColor="White"
                     VerticalOptions="FillAndExpand">
            <Label Text="Single Name"></Label>
            <Entry x:Name="NameEntry"
                   Placeholder="Single Name: ie. Pencil"
                />
            <Label Text="Plural Name"></Label>
            <Entry x:Name="PluralEntry"
                   Placeholder="Plural Name: ie. Pencils"
                />
            <Label Text="Units"></Label>
            <StackLayout Orientation="Horizontal">
                <Entry x:Name="MeasurementEntry"
                       Placeholder="ex. 6.25"/>

                <Picker x:Name="UnitsPicker" 
                        TextColor="Black" ItemsSource="{Binding ObjectMeasurements}" SelectedItem="{Binding SelectedObject}"
                        HorizontalOptions="FillAndExpand" ItemDisplayBinding="{Binding PluralName}">
                     
                </Picker>
            </StackLayout>
            <Label Text="Object Packs"></Label>
            <Picker ItemsSource="{Binding ObjectPacks}" SelectedItem="{Binding SelectedObjectPack}" ItemDisplayBinding="{Binding PackName}"/>
            <Button Text="New Object Pack" Clicked="ButtonNewObjectPack"></Button>
            <Button x:Name="ImageInsert"
                    WidthRequest="15"
                    HeightRequest="45"
                    MinimumHeightRequest="45"
                    MinimumWidthRequest="15"
                    Text="Insert Image"
                    TextColor="White"
                    BackgroundColor="ForestGreen"
                    VerticalOptions="EndAndExpand"/>


            <Button x:Name="NewButton"
                    WidthRequest="15"
                    HeightRequest="45"
                    MinimumHeightRequest="45"
                    MinimumWidthRequest="15"
                    Text="New"
                    TextColor="White"
                    BackgroundColor="ForestGreen"
                    VerticalOptions="End" Clicked="NewButton_OnClicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>