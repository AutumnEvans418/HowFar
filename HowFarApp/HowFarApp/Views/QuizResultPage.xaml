<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HowFarApp.Views.QuizResultPage"
             xmlns:views="clr-namespace:HowFarApp.Views;assembly=HowFarApp"

             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Grade.GradeLetter}" FontSize="30" FontAttributes="Bold" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Share"></Button>
            <Button Text="Done" Clicked="DoneClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>