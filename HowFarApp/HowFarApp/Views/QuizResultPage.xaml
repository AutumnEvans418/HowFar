<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HowFarApp.Views.QuizResultPage"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:HowFarApp.Views;assembly=HowFarApp"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"

             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance views:QuizResultPage}"
             >
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding Grade.GradeLetter}" FontSize="30" FontAttributes="Bold" 
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Share"></Button>
            <Button Text="Done" Clicked="DoneClicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>