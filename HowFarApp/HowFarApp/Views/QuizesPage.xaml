<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HowFarApp.Views.QuizesPage">
    <ContentPage.Content>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            
            <ListView ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" RowHeight="40">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding}"></Label>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <StackLayout Grid.Row="1">
                <Entry Placeholder="# of Questions" Text="{Binding QuestionNumber}"></Entry>
                <Label Text="Object Packs"></Label>
                <Picker ItemsSource="{Binding Packs}"></Picker>
                <Button Text="Go!" HorizontalOptions="End" Clicked="GoClicked"></Button>
            </StackLayout>
        </Grid>
      
    </ContentPage.Content>
</ContentPage>