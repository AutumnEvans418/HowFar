<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:ms="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:HowFarApp.Views;assembly=HowFarApp"
             ms:Ignorable="d"
             d:DataContext="{d:DesignInstance views:ObjectManagerPage}"
             x:Class="HowFarApp.Views.ObjectManagerPage">
    <ContentPage.Content>
        <StackLayout Spacing="10"
                     Padding="20"
                     BackgroundColor="White">
            <StackLayout.Resources>
                <Style x:Key="H1" TargetType="Label">
                    <Setter Property="FontSize" Value="24"></Setter>
                    <Setter Property="FontAttributes" Value="Bold"></Setter>
                </Style>
            </StackLayout.Resources>
            <Label Text="Objects" Style="{DynamicResource H1}"></Label>
            <ListView x:Name="ObjectManagerList"   ItemsSource="{Binding Objects}"                  
                      HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Image WidthRequest="50"                                          
                                           HeightRequest="50"                                          
                                           Source="{Binding Image}"                                          
                                           Grid.Row="0"                                           
                                           Grid.RowSpan="2"
                                           Grid.Column="0" />
                                    <Label Text="{Binding PluralName}" 
                                           TextColor="Black"
                                           FontAttributes="Bold"                                           
                                           FontSize="Large"                                          
                                           Grid.Row="0"                                           
                                           Grid.Column="1"/>
                                    <Switch/>
                                  </Grid>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Label Text="Converter" Style="{DynamicResource H1}"></Label>
            <StackLayout Orientation="Horizontal">
                <Label Text="From:" WidthRequest="40" VerticalTextAlignment="Center"></Label>
                <Entry Placeholder="ie. 10"></Entry>
                <Picker ItemsSource="{Binding Measurements}"></Picker>
            </StackLayout>
            <StackLayout Orientation="Horizontal">
                <Label Text="To:" WidthRequest="40"></Label>
                <Picker ItemsSource="{Binding Measurements}"></Picker>
                <Label Text="{Binding ConvertResult}"></Label>
            </StackLayout>
<Button Text="+"
                     TextColor="White"
                     BackgroundColor="SkyBlue"
                     WidthRequest="40" 
                     HeightRequest="40" 
                     CornerRadius="20"
                     HorizontalOptions="End" Clicked="Button_OnClicked"/>

                                
        </StackLayout>
    </ContentPage.Content>
</ContentPage>