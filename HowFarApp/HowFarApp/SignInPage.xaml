             xmlns:local="clr-namespace:HowFarApp"
             x:Class="HowFarApp.SignInPage">

    <Grid Margin="20">
        <!-- Place new controls here -->
      
        <Image Source="Assets/Login.png" Aspect="AspectFill"></Image>
